@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider/>
<MudSnackbarProvider />


<MudLayout>

    
    <Header/>
    <MudStack Style="margin-top:0px; margin-bottom:0px; background-color:grey;" Row="true">
        <MudIconButton Style="margin-left:10px; color:white;" Icon="@Icons.Material.Filled.Menu"  Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudTooltip Text="LinkedIn">
            <MudIconButton Style="color:white;" Icon="@Icons.Custom.Brands.LinkedIn" Link="https://www.linkedin.com/in/aaroncskinner/" Target="_blank" />
        </MudTooltip>
        <MudTooltip Text="Github">
            <MudIconButton Style="color:white;" Icon="@Icons.Custom.Brands.GitHub" Link="https://github.com/ornerylion" Target="_blank" />
        </MudTooltip>
        <MudTooltip Text="Login">
            <MudIconButton Style="color:white; margin-right:15px; " Icon="@Icons.Material.Filled.Login" Link="/login" />
        </MudTooltip>
    </MudStack>

    <MudDrawer Style="background-color:grey; position:absolute"  @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Style="color:white;" Typo="Typo.h6">Portfolio</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;


    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}


